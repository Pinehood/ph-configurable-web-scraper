<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <link href="style.css" rel="stylesheet" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <title>Create New Scraper</title>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row h-100">
        <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
          <div class="position-sticky">
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="nav-link" href="/"> Home </a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/create"> Create New </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/scrapers"> Scrapers </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/jobs"> Cron Jobs </a>
              </li>
            </ul>
          </div>
        </nav>
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <div class="container">
            <div class="container">
              <h1>Scraper Configuration JSON</h1>
              <form id="form">
                <div class="mb-3">
                  <label for="config" class="form-label">JSON</label>
                  <textarea
                    class="form-control"
                    id="json"
                    name="json"
                    rows="24"
                    required="true"
                  ></textarea>
                </div>
                <div class="mb-3">
                  <label for="job" class="form-label">Cron Job</label>
                  <select
                    class="form-select"
                    id="cron"
                    name="cron"
                    required="true"
                  >
                    {{{options}}}
                  </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
          </div>
        </main>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"
    ></script>
    <script src="create.js"></script>
  </body>
</html>